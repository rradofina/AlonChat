# Google API Configuration
# Get these from https://console.cloud.google.com/
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id_here
NEXT_PUBLIC_GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_OAUTH_SECRET=your_google_oauth_secret_here

# Supabase Configuration
# Get these from https://app.supabase.com/
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Email Access Control
# Comma-separated list of allowed email addresses
NEXT_PUBLIC_ALLOWED_EMAILS=user1@example.com,user2@example.com

# Admin Setup
# Generate a secure random key for admin setup endpoint
# You can generate one using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ADMIN_SETUP_KEY=your_secure_random_key_here

# Optional: Admin emails (comma-separated)
# These users will automatically have admin access
ADMIN_EMAILS=admin@example.com

# Optional: Google Drive Template Folder ID
# If you have a specific folder for PNG templates
# NEXT_PUBLIC_GOOGLE_DRIVE_TEMPLATE_FOLDER_ID=your_folder_id_here